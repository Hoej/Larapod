{
    "name": "hoej/larapod",
    "description": "Lightweight laravel docker environment",
    "keywords": [
        "hoej",
        "larapod"
    ],
    "homepage": "https://github.com/hoej/larapod",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Nicolas Buch",
            "email": "nb@hoej.dk",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.4|^8.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "Hoej\\Larapod\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Hoej\\Larapod\\Tests\\": "tests"
        }
    },
    "bin": [
        "src/bin/pod"
    ],
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"

    },
    "config": {
        "sort-packages": true
    }
}
